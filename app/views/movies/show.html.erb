<section id="sectionPageSingleMovie" class="py-3">
  <div class="container px-5 my-2">

      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <%= link_to "Home", root_path %>
          </li>
          <li class="breadcrumb-item active" aria-current="page">Movie</li>
        </ol>
      </nav>

    <div class="h-100 container justify-content-center align-items-center">
    
    <div class="row">
      <%#  .col-lg-4 %>
      <div class="col h-100 mb-3" style="">                         
        <%# .card %>
        <div id="cardPageSingleMovie" class=" card h-100 border-0">
          <%# .card-header %>
          <div class="card-header shadow">
            <div class="container">
              <div class="row align-items-center">
                <div class="col-4 align-items-center">
                  <div class="small">
                    <div class="fw-bold card-text-primary">Category: <%= movie.category.name %> </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%# /.card-header %>
          <%# .card-body %>
          <div class="card-body p-4">
            <div class= "row align-items-center">
              <div class="col-md-4">
                <div class="badge bg-primary bg-gradient rounded-pill mb-2"> <i class="fa-regular fa-star"></i>
                  <%= movie.rating&.average || "0.0" %>
                </div>
              </div>
            </div>
              <h5 class="card-title mb-3"><%= movie.title %></h5>
              <p class="card-text mb-0">
                 <%= movie.text %>
              </p>
          </div>
          <%# /.card-body %>
        </div>
        <%# /.card %>
      </div>
      <%# / .col-lg-4 %>
    </div>

    </div> 
  </div> 
</section>

